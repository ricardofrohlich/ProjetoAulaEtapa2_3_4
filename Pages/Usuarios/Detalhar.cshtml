@page "{id:int}"
@model App0502Aula.Pages.Usuarios.DetalharModel
@{
    ViewData["Title"] = "Detalhes do Usuário";
}
<h2>@ViewData["Title"]</h2>
<div>
    <label>Id: </label>
    <span>@Model.Usuario.Id</span>
</div>
<div>
    <label>Nome: </label>
